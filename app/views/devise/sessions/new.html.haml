.login-wrapper
  .row
    .col-md-12
      .container.bottom_radius.black_box_inset_shadow.login
        %h1 Вход
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          .sign_up
            .form-group
              = f.email_field :email, :style => 'width: 98%', :class => "form-control", :placeholder => "Email"
            .form-group
              = f.password_field :password, :style => 'width: 98%', :class => "form-control", :placeholder => "Пароль"
    
            .row
              .col-md-12
              
                .form-group.pull-right
                  = f.submit "Вход", :class => 'btn btn-lg btn-primary pull-right login-button'
            .row
              .col-md-12.text_center=# link_to "Not yet a member? Sign up", "/users/sign_up" 
          
